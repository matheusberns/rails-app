<p id="notice"><%= notice %></p>

<h1><%= t('titles.mining_types') %></h1>

<table>
  <thead>
  <tr>
    <th><%= MiningType.human_attribute_name(:description) %></th>
    <th><%= MiningType.human_attribute_name(:acronym) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @mining_types.each do |mining_type| %>
    <tr>
      <td><%= mining_type.description %></td>
      <td><%= mining_type.acronym %></td>
      <td><%= link_to t('links.show'), mining_type %></td>
      <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
      <td><%= link_to t('links.destroy'), mining_type, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<button type="button">
  <%= link_to t('links.new_mining_type'), new_mining_type_path %>
</button>
<br/>
<button type="button">
  <%= link_to t('links.home'), welcome_index_path %>
</button>