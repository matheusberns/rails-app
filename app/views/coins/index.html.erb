<p id="notice"><%= notice %></p>
<h1>Moedas</h1>

<table>
  <thead>
  <tr>
    <th><%= Coin.human_attribute_name(:description)%></th>
    <th><%= Coin.human_attribute_name(:acronym)%></th>
    <th><%= Coin.human_attribute_name(:mining_type_id)%></th>
    <th><%= Coin.human_attribute_name(:cotacao)%></th>
    <th><%= Coin.human_attribute_name(:url_image)%></th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @coins.each do |coin| %>
    <tr>
      <td><strong><%= coin.description %></strong></td>
      <td><strong><%= coin.acronym %></strong></td>
      <td><strong><%= coin.mining_type.description %></strong></td>
      <td><strong><%= coin.cotacao %></strong></td>
      <td><img <%= image_tag coin.url_image, size: "50x50" %></td>
      <td><%= link_to t('links.show'), coin %></td>
      <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
      <td><%= link_to t('links.destroy'), coin, method: :delete, data: {confirm: 'VocÃª tem certeza?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<button type="button">
  <%= link_to 'Nova moeda', new_coin_path %>
</button>
<button type="button">
  <%= link_to 'Inicio', welcome_index_path %>
</button>
